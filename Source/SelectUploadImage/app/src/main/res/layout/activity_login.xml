<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.snehamishra.smartshoppingactivities.ImageActivity">

    <Button
        android:id="@+id/capture_btn"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/backActivityTextView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Capture and Upload"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/capture_btn"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/backActivityTextView"
        android:layout_toRightOf="@+id/backActivityTextView"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="77dp" />

    <Button
        android:id="@+id/select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="24dp"
        android:text="Select Image"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="291dp" />

    <TextView
        android:id="@+id/backActivityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/capture_btn"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/capture_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="31dp"
        android:text="Back"
        android:visibility="visible"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="358dp" />

    <TextView
        android:id="@+id/SkipPageTextView"
        android:layout_width="34dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/backActivityTextView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:text="Skip"
        android:visibility="visible"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="358dp" />

</RelativeLayout>
